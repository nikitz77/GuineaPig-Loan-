<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.karenina.guineapigloan.MainActivity">

    <TextView
        android:id="@+id/promptTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/promptString"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp" />

    <Button
        android:id="@+id/Tpay_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Mpay"
        app:layout_constraintRight_toRightOf=";0@id/Mpay_btn"
        app:layout_constraintBottom_toTopOf="@id/Mpay_btn" />

    <Button
        android:id="@+id/Mpay_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Mpay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/promptTextView"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:onClick="TIME"/>

</android.support.constraint.ConstraintLayout>
